{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./.ts-node",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"],
            "@api/*": ["src/api/*"],
            "models/*": ["src/models/*"],
            "assets/*": ["src/assets/*"],
            "~types/*": ["src/types/*"],
            "subscribers/*": ["src/subscribers/*"],
            "endpoints/*": ["src/endpoints/*"],
            "services/*": ["src/services/*"],
            "~utils/*": ["src/utils/*"]
        },
        "types": ["jest", "node"],
        "lib": ["esnext"]
    },
    "include": ["**/*.ts","**/*.d.ts", "**/*.tsx", "**/*.test.js", "**/*.test.ts"], 
    "exclude": ["node_modules", "dist"]
}