{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./.ts-node",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"],
            "api/*": ["api/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.test.js"]
}